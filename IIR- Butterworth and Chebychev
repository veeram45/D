fs = 4000;
f1 = 400;
f2 = 1000;
f3 = 1500;
fm = min([f1,f2]);
m1 = 2*pi*f1; % 800pi
m2 = 2*pi*f2; % 2000pi
m3 = 2*pi*f3; % 3000pi

t = 0:1/fs:30/fm;
x = 1+2*cos(m1*t)+4*cos(m2*t)+ 3*cos(m3*t);

w1 = m1/fs; 
w2 = m2/fs;
w3 = m3/fs;

wpn = [(w2-0.5)/pi,(w2+0.5)/pi]; % [681Hz,1318Hz]
wsn = [(w1+0.37)/pi,(w3-0.2)/pi]; % [635Hz,1372Hz]

Rp = 1; 
Rs = 60;
fpb= 15000;
fsb= 20000;
wpn1 = w3/pi; 
wsn1 = w2/pi; 


[N,Wp]= cheb1ord(wpn1,wsn1,Rp,Rs);
[b,a]= cheby1(N,Rp,Wp,'high');

y = filter(b,a,x);
%Frequency response 
[H,fa] = freqz(b,a,1000,fs);
[H1,wd] = freqz(b,a,1000);
Nfft = 1000;
X = fft(x,Nfft);
Y = fft(y,Nfft);
w = (-Nfft/2:Nfft/2-1)*2*pi/Nfft; 
Xw = fftshift(abs(X)); % non-centered to centered
Yw = fftshift(abs(Y));
f = (-Nfft/2:(Nfft/2)-1)*fs/Nfft;
Sfx= Xw.^2/Nfft^2;
Sfy= Yw.^2/Nfft^2
figure(1);
subplot(2,1,1)
plot(t,x)
xlabel('time(s)')
ylabel('x(t)')
title('Input signal')
subplot(2,1,2)
plot(y)
xlabel('time(s)')
ylabel('y(t)')
title('Filtered signal')
figure(2);
subplot(3,1,1)
plot(fa,20*log10((abs(H))));
xlabel('f(Hz)')
ylabel('|H(f)|')
title('Frequency reponse f vs H')
subplot(3,1,2)
plot(wd,20*log10(abs(H1)));
xlabel('w(rad/s)')
ylabel('|H(w)|')
title('Magnitude reponse w vs |H|')
subplot(3,1,3)
plot(w,angle(H));
xlabel('w(rad/s)')
ylabel('phase H(w)')
title('Phase response w vs <H')
 Power Spectrum
figure(3)
subplot(2,1,1)
plot((f),(Sfx))
xlabel('f(Hz)')
ylabel('S(f)')
title(['Power spectrum' ...
 ' for x(t)'])
subplot(2,1,2)
plot(f,Sfy)
xlabel('f(Hz)')
ylabel('S(f)')
title(['Power spectrum' ...
 ' for y(t)'])
figure(4);
subplot(2,1,1)
plot((f),10*log10(Sfx))
xlabel('f(Hz)')
ylabel('S(f)(dB)')
title(['Power spectrum' ...
 ' for x(t)'])
subplot(2,1,2)
plot(f,10*log10(Sfy))
xlabel('f(Hz)')
ylabel('S(f)(dB)')
title(['Power spectrum' ...
 ' for y(t)'])
